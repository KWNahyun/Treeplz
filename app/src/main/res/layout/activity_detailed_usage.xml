<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewUsage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:padding="8dp"
                android:contentDescription="@string/usage_back"
                android:src="@drawable/ic_back"
                app:tint="#6B7280"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usage_title"
                android:textColor="#2D3748"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/languageToggleContainer"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Language Toggle placeholder -->
            <FrameLayout
                android:id="@+id/languageToggleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- ë‚˜ì¤‘ì— ì»¤ìŠ¤í…€ í† ê¸€ / ë²„íŠ¼ ë¶™ì´ê¸° -->
                <ImageView
                    android:id="@+id/ivLanguageToggle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_language"
                    android:contentDescription="@string/usage_language_toggle"
                    app:tint="#6B7280" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Summary Cards (2 x 2 Grid) -->
        <GridLayout
            android:id="@+id/gridSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Requests Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRequests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_bolt"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/usage_requests"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />

                    <TextView
                        android:id="@+id/tvSubRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/main_today_usage"
                        android:textSize="10sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Time Spent Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTimeSpent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelTimeSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/usage_time_spent"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueTimeSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0min"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />

                    <TextView
                        android:id="@+id/tvSubTimeSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/usage_minutes"
                        android:textSize="10sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tokens Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTokens"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelTokens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/usage_tokens"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0k"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />

                    <TextView
                        android:id="@+id/tvSubTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/main_tokens"
                        android:textSize="10sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carbon Footprint Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCarbon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_leaf"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelCarbon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/usage_carbon_footprint"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueCarbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0g"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />

                    <TextView
                        android:id="@+id/tvSubCarbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/main_carbon_footprint"
                        android:textSize="10sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Weekly Trend Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeeklyTrend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvWeeklyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usage_weekly_trend"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usage_requests"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usage_carbon_with_unit"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <!-- ìš”ì¼ë³„ ë§‰ëŒ€ëŠ” ë‚˜ì¤‘ì— ì½”ë“œì—ì„œ width / progress ë™ì ìœ¼ë¡œ ì¡°ì ˆ -->
                <!-- ì˜ˆì‹œ: Monday ë¼ì¸ í•˜ë‚˜ -->
                <LinearLayout
                    android:id="@+id/rowMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="#2D3748"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <!-- Requests Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#E2E8DC"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/barMonRequests"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#5A7C65" />
                        </LinearLayout>

                        <!-- Carbon Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="4dp"
                            android:background="#E2E8DC"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/barMonCarbon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#8B9677" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvMonRequestsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/tvMonCarbonValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tue ~ Sun ë„ ìœ„ì™€ ê°™ì€ íŒ¨í„´ìœ¼ë¡œ ë³µë¶™í•´ì„œ idë§Œ ìš”ì¼ë³„ë¡œ ë°”ê¾¸ë©´ ë¨ -->

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tips Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTipsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usage_tips"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Tip 1 -->
                <LinearLayout
                    android:id="@+id/tip1Container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#FFFFFFFF"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvTip1Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ±"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTip1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage_tip1"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvTip1Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/usage_tip1"
                            android:textSize="11sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tip 2, Tip 3ë„ ê°™ì€ íŒ¨í„´ìœ¼ë¡œ ì¶”ê°€ -->

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Environmental Impact Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEnvImpact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ"
                        android:textSize="18sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvEnvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usage_environmental_impact"
                        android:textColor="#2D3748"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEnvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Equivalent X g COâ‚‚:"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvEnvCarLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš— Car distance"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvEnvCarValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0m"
                            android:textSize="13sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvEnvLightLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Light bulb"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvEnvLightValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h"
                            android:textSize="13sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvEnvPhoneLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“± Phone charge"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvEnvPhoneValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="13sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
