<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewUsage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:padding="8dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:tint="#6B7280"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detailed Usage"
                android:textColor="#2D3748"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/languageToggleContainer"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Language Toggle (ë©”ì¸ê³¼ ìŠ¤íƒ€ì¼ í†µì¼) -->
            <FrameLayout
                android:id="@+id/languageToggleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ToggleButton
                    android:id="@+id/switchLanguage"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/selector_lang_thumb"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    app:tint="@color/muted" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Summary Cards (2 x 2 Grid) -->
        <GridLayout
            android:id="@+id/gridSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Requests -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_bolt"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Requests"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Time Spent -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelTimeSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Time"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueTimeSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0min"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tokens -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelTokens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Tokens"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0k"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carbon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_leaf"
                            app:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tvLabelCarbon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Carbon"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvValueCarbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0g"
                        android:textSize="22sp"
                        android:textColor="#2D3748" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- Weekly Trend (Dummy) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvWeeklyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Trend"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/rowMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="#2D3748"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/barMonRequests"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:background="#5A7C65"/>

                    <TextView
                        android:id="@+id/tvMonRequestsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="12"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <!-- ë”ë¯¸ ë°ì´í„°ë¡œ í™”ìš”ì¼ í•˜ë‚˜ ë” ì¶”ê°€ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textColor="#2D3748"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="140dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:background="#5A7C65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="18"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- [ê°œì„  í¬ì¸íŠ¸ 2] Tips Section (3ê°œ ëª©ë¡ìœ¼ë¡œ í™•ìž¥) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTipsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips for Reduction"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Tip 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTip1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Be Specific"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvTip1Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Precise prompts reduce follow-up queries."
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

                <!-- Tip 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTip2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batch Requests"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvTip2Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Ask multiple questions in one go."
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

                <!-- Tip 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTip3Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check Daily"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#2D3748" />

                        <TextView
                            android:id="@+id/tvTip3Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Stay aware of your digital carbon footprint."
                            android:textSize="12sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Env Impact -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEnvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environmental Impact"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEnvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equivalent to..."
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvEnvCarValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m Car"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvEnvLightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0h Light"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvEnvPhoneValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Charges"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>