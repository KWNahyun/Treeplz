<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:cardElevation="2dp"
    android:cardCornerRadius="12dp"
    android:useCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="ðŸŒ±"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@color/foreground"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle"
                    android:textSize="12sp"
                    android:textColor="@color/muted" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTokensBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/badge_round"
                android:text="~15"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_down"
                android:tint="@color/muted" />
        </LinearLayout>

        <!-- detail section (initially gone) -->
        <LinearLayout
            android:id="@+id/layoutDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/muted"
                android:textSize="13sp" />

            <!-- bad example -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Inefficient"
                android:textColor="#7f1d1d"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBadExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bad example"
                android:textColor="#7f1d1d"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="#FFF7F7"
                android:fontFamily="sans-serif" />

            <!-- good example -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Efficient"
                android:textColor="#064e3b"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGoodExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good example"
                android:textColor="#064e3b"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="#F0FFF6"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
